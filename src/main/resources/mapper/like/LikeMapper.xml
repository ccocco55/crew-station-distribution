<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.crewstation.mapper.like.LikeMapper">

    <insert id="insertLike" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_like (post_id, member_id)
        values (#{postId},#{memberId})
    </insert>
    <delete id="deleteLike">
        delete from tbl_like
        where id=#{id}
    </delete>

    <select id="existsLikeByPostIdAndMemberId">
        select id
        from tbl_like
        where post_id = #{postId} and member_id = #{userId}
    </select>

</mapper>